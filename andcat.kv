#:kivy 1.9.0

<ScreenMan>:
    Screen:
        name: 'main'
        AndCatGrid:
            id: _main_screen
            cols: 1
            rows: 5
            AndCatLabel:
                text: 'AndCat'
                size_hint: 1, None
                height: 50
            AndCatBtn:
                text: 'Send File'
                on_press: root.current = 'send_file'
            AndCatBtn:
                text: 'Receive File'
                on_press: root.current = 'recv_file'
            AndCatBtn:
                text: 'HTTP Server'
                on_press: root.current = 'http_server'
            AndCatBtn:
                text: 'About'
                on_press: root.current = 'about'
    Screen:
        name: 'send_file'
        SendFile:
    Screen:
        name: 'recv_file'
        RecvFile:
    Screen:
        name: 'http_server'
        HTTPServer:
    Screen:
        name: 'about'
        About:
